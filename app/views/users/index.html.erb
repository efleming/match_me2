<div id="carousel" class="carousel slide" data-ride="carousel">

    <!-- Menu -->
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
    </ol>

    <!-- Items -->
    <div class="carousel-inner">
        <div class="item active">
            <%= image_tag "photo3.jpg" %>
            <div class="carousel-caption">
              <h1>Match Me</h1>
              <h3>Find the Personality of Your Match</h3>
            </div>
        </div>
        <div class="item">
            <%= image_tag "photo1.jpg" %>
            <div class="carousel-caption">
              <h3>John and Julia</h3>
              <p>July 31 2015</p>
            </div>
        </div>
        <div class="item">
            <%= image_tag "photo4.jpg" %>
            <div class="carousel-caption">
              <h3>Matt and Kristin</h3>
              <p>August 3 2015</p>
            </div>
        </div>
    </div>
    <a href="#carousel" class="left carousel-control" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a href="#carousel" class="right carousel-control" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
<a class="btn btn-default btn-lg btn-block" href="#" role="button">Find Your Personality</a>
